
<form class="" action="/<%=@account_id%>/transactions/<%=@transaction.id%>" method="post">

  <label for="name_input">Name</label>
  <input type="text" name="name" value="<%= @transaction.name%>" id="name_input">
  <br>

 <label for="value_input">How much?</label>
 <input type="number" name="value" value="<%= @transaction.value %>" id="value_input">
 <br>

 <label for="transaction date">Date</label>
<input type="date" name="transaction_date" value="<%= @transaction.transaction_date %>">


 <label for="merchant_select">Merchant</label>
 <select selected = "<%= @merchant_id %>"  name="merchant_id" id="merchant_select">
   <% @merchants.each do |merchant| %>

   <% if merchant.id == @transaction.merchant_id %>
      <option value=<%= merchant.id %> selected><%= merchant.name %></option>
    <% else %>
      <option value=<%= merchant.id %>><%= merchant.name %></option>
    <% end %>
  <% end %>
 </select>

 <label for="tag_select">Tags</label>
  <select  name="tag_id" id="tag_select" selected = "<%= @transaction.tag_id %>">
    <% @tags.each do |tag| %>
     <option value="<%= tag.id %>" <%= "selected" if tag.id == @transaction.tag_id %>><%= tag.name %></option>

   <% end %>
  </select>
 <br>
  <input type="submit" name="" value="Save">
</form>
