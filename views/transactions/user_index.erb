

  <% if @account_id && @user.has_used_account()%>

  <div class="budget_warning">
    <h4>You have spent £<%= @user.spent() %> and have £<%= @user.budget_left %> left in your budget.</h4>
  </div>

  <% if @user.budget_left == 0 %>
  <h4 id="overspent"> You have overspent </h4>
  <% elsif @user.budget_percent() > 90%>
  <h4 id="warning"> Tighten your purse strings a bit </h4>
  <% end %>


  <form action="/<%=@user.id%>/transactions/month_total" method="post">
        <label for="monthly_spend">Check monthly spend for</label>
        <select name="month" id="monthly_spend">
          <% [*1..12].each do |month| %>
            <option value="<%=month%>"><%=Date::MONTHNAMES[month]%></option>
          <% end %>
        </select>
      </select>
      <input type="submit" name="" value="Find out">
  </form>


  <h4>
    Your total spend in <%= Date.today.strftime("%B") %> is £<%= @monthly_spend  %>
  </br/></h4>

      <h4>You spent most on <%= Tag.find(Transaction.total_spent_user_tag(@user)).name %></h4>
      <h4> Your total spending is <%= @user.spent() %> </h4>

<a href="/<%=@account_id%>/transactions/filter_tag" style="
text-decoration: none">Order By Tag</a>

<%= erb(:'transactions/shared/table') %>

<% else %>
<h2> You need to enter some of your spending. </h2>
<a href="/<%=@account_id%>/transactions/new" style="
text-decoration: none">Add entry</a>
<% end %>
