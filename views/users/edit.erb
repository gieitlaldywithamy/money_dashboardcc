
<% if params['error'] %>
<%= erb(:'error/no_user') %>
<% end %>
<form class="" action="/users/<%=@user.id%>" method="post">

  <label for="user_name">Name</label>
  <input type="text" name="name" value="<%=@user.name%>" id="user_input">
  <br>

   <label for="budget_limit">What's your budget?</label>
   <input type="number" name="budget_limit" step="any" min="0" value="<%=@user.budget_limit%>" id="value_input">
   <br>

  <input type="submit" name="" value="Save">
</form>
