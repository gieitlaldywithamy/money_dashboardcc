
<% if params['error'] %>
<%= erb(:'error/no_user') %>
<% end %>
<form class="" action="/users/<%=@user.id%>" method="post">

  <label for="user_name">Name</label>
  <input type="text" name="name" value="<%=@user.name%>" id="user_input">
  <br>

  <label for="password">Password</label>
  <input type="text" name="password" value="<%=@user.password%>" id="password">
  <br>

   <label for="budget_limit">Annual income</label>
   <input type="number" name="annual_income" step="any" min="0" value="<%=@user.annual_income%>" id="value_input">
   <br>

  <input type="submit" name="" value="Save">
</form>
